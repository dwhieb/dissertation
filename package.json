{
  "name": "dissertation",
  "version": "0.2.0",
  "description": "My Ph.D. dissertation in linguistics at the University of California, Santa Barbara",
  "author": {
    "name": "Daniel W. Hieber",
    "email": "dwhieb@gmail.com",
    "url": "https://danielhieber.com"
  },
  "keywords": [
    "linguistics",
    "lexical flexibility",
    "typology",
    "historical linguistics",
    "discourse"
  ],
  "homepage": "https://github.com/dwhieb/dissertation",
  "bugs": "https://github.com/dwhieb/dissertation/issues",
  "license": "UNLICENSED",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dwhieb/dissertation.git"
  },
  "engines": {
    "node": "14.x"
  },
  "type": "module",
  "scripts": {
    "abbreviations": "node scripts/build/abbreviations.js",
    "anc":           "cd scripts/ANC && java -Xmx500M -jar ANCTool-2.0.0-jar.jar && cd ../..",
    "bib":           "biber src/main",
    "cleanup":       "node scripts/build/cleanup.js",
    "compile":       "cd src && xelatex -halt-on-error main.tex && cd ..",
    "copy-pdf":      "node scripts/build/copyPDF.js",
    "diss-version":  "node scripts/build/version.js",
    "log-start":     "node scripts/build/startLog.js",
    "log-end":       "node scripts/build/endLog.js",
    "quick-bib":     "npm run compile && npm run bib && npm run compile && open-cli src/main.pdf",
    "quick-build":   "npm run compile && open-cli src/main.pdf",
    "upload":        "node scripts/build/upload.js",
    "prebuild":      "npm run cleanup && npm run abbreviations && npm run diss-version",
    "build":         "npm run compile && npm run bib && npm run compile",
    "postbuild":     "npm run copy-pdf",
    "preversion":    "npm run log-start && npm run build && npm run log-end && npm run cleanup"
  },
  "devDependencies": {
    "@azure/storage-blob": "^10.3.0",
    "@digitallinguistics/concordance": "^0.4.0",
    "@digitallinguistics/tags2dlx": "^0.4.0",
    "csv-stringify": "^5.5.0",
    "eslint": "^7.4.0",
    "open-cli": "^6.0.1",
    "ora": "^4.0.4",
    "progress": "^2.0.3",
    "recursive-readdir": "^2.2.2",
    "winston": "^3.3.3",
    "yaml": "^1.10.0"
  }
}
