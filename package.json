{
  "name": "dissertation",
  "version": "0.2.0",
  "description": "My Ph.D. dissertation in linguistics at the University of California, Santa Barbara",
  "author": {
    "name": "Daniel W. Hieber",
    "email": "dwhieb@gmail.com",
    "url": "https://danielhieber.com"
  },
  "keywords": [
    "linguistics",
    "lexical flexibility",
    "typology",
    "historical linguistics",
    "discourse"
  ],
  "homepage": "https://github.com/dwhieb/dissertation",
  "bugs": "https://github.com/dwhieb/dissertation/issues",
  "license": "UNLICENSED",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dwhieb/dissertation.git"
  },
  "engines": {
    "node": "14.x"
  },
  "type": "module",
  "scripts": {
    "abbreviations": "node thesis/scripts/build/abbreviations.js",
    "anc": "cd data/English/scripts/ANC && java -Xmx500M -jar ANCTool-2.0.0-jar.jar && cd ../../../..",
    "bib": "biber thesis/src/main",
    "cleanup": "node thesis/scripts/cleanup.js",
    "compile": "cd thesis/src && xelatex -halt-on-error main.tex && cd ../..",
    "copy-pdf": "node thesis/scripts/build/copyPDF.js",
    "diss-version": "node thesis/scripts/build/version.js",
    "log-start": "node thesis/scripts/build/startLog.js",
    "log-end": "node thesis/scripts/build/endLog.js",
    "quick-bib": "npm run compile && npm run bib && npm run compile && open-cli thesis/src/main.pdf",
    "quick-build": "npm run compile && open-cli thesis/src/main.pdf",
    "upload": "node thesis/scripts/build/upload.js",
    "prebuild": "npm run cleanup && npm run abbreviations && npm run diss-version",
    "build": "npm run compile && npm run bib && npm run compile",
    "postbuild": "npm run copy-pdf",
    "preversion": "npm run log-start && npm run build && npm run log-end && npm run cleanup"
  },
  "bin": {
    "generateWordforms": "./stats/scripts/bin/generateWordforms.js"
  },
  "devDependencies": {
    "@azure/storage-blob": "^10.3.0",
    "@digitallinguistics/concordance": "^0.4.0",
    "@digitallinguistics/tags2dlx": "^0.4.0",
    "csv-stringify": "^5.5.0",
    "eslint": "^7.4.0",
    "fs-extra": "^9.0.1",
    "open-cli": "^6.0.1",
    "ora": "^4.0.4",
    "progress": "^2.0.3",
    "recursive-readdir": "^2.2.2",
    "winston": "^3.3.3",
    "yaml": "^1.10.0",
    "yargs-parser": "^18.1.3"
  }
}
